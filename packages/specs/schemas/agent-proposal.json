{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Proposal",
  "description": "Schema for agent proposals in Council sessions",
  "type": "object",
  "required": ["agent_id", "council_id", "round", "content"],
  "properties": {
    "agent_id": {
      "type": "string",
      "description": "Unique identifier for the agent"
    },
    "council_id": {
      "type": "string",
      "description": "Council session identifier"
    },
    "round": {
      "type": "integer",
      "minimum": 1,
      "description": "Council round number"
    },
    "content": {
      "type": "object",
      "required": ["type", "summary"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["proposal"],
          "description": "Message type"
        },
        "summary": {
          "type": "string",
          "maxLength": 200,
          "description": "Brief summary of the proposal"
        },
        "rationale": {
          "type": "string",
          "description": "Detailed reasoning for the proposal"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Agent's confidence in this proposal (0-1)"
        },
        "artifacts": {
          "type": "object",
          "properties": {
            "patch": {
              "type": "object",
              "properties": {
                "files_impacted": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "tests": {
              "type": "object",
              "properties": {
                "unit": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
