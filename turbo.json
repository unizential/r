{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    "**/.env.local",
    "**/.env.*.local"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "lint": {
      "outputs": [],
      "dependsOn": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "env": [
        "CI",
        "NODE_ENV"
      ]
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "outputs": []
    }
  }
}
